@{
}
@using CodingEvents.Models
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Key</td>
                <td>@evt.Value</td>
            </tr>
        }
    </table>
}
